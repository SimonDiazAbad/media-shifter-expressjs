{
  "name": "media-shifter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "img:dev": "bun --filter @media-shifter/img-shifter dev",
    "img:build": "bun --filter @media-shifter/img-shifter build",
    "img:start": "bun --filter @media-shifter/img-shifter start",
    "gateway:start": "bun --filter @media-shifter/gateway start",
    "gateway:dev": "bun --filter @media-shifter/gateway dev",
    "gateway:build": "bun --filter @media-shifter/gateway build",
    "commons:build": "bun --filter @media-shifter/commons build",
    "commons:watch": "bun --filter @media-shifter/commons watch",
    "all:build": "concurrently \"bun img:build\" \"bun gateway:build\"",
    "all:dev": "concurrently \"bun img:dev\" \"bun gateway:dev\"",
    "all:run": "concurrently \"bun img:start\" \"bun gateway:start\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@media-shifter/commons": "workspace:*"
  }
}
